<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:context=".view.DetailFragment">
		<ImageView
			android:id="@+id/moneyIcon"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
				android:src="@drawable/ic_cash"
				android:scaleType="fitCenter"
				android:minHeight="150dp"/>
		<TextView
				android:id="@+id/moneyName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/moneyIcon"
				android:text="Money Name"
				style="@style/Title"
				android:layout_centerHorizontal="true"
				android:layout_margin="4dp"/>
		<TextView
				android:id="@+id/moneyCost"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/moneyName"
				android:text="Money Cost"
				style="@style/Text"
				android:layout_centerHorizontal="true"
				android:layout_margin="4dp"/>
		<TextView
				android:id="@+id/moneyTime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/moneyCost"
				android:text="Money Time"
				style="@style/Text"
				android:layout_centerHorizontal="true"
				android:layout_margin="4dp"/>



	</RelativeLayout>
</layout>